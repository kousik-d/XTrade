<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AppOpenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/loginUserID_back"

            android:visibility="visible"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:clickable="true"
            android:src="@drawable/back_button"/>

        <TextView

            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginRight="20dp"
            android:textColor="@color/darkBlack"/>



    </LinearLayout>



    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="User ID"
        android:textColor="@color/card_blue"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_semibold"
        android:scrollHorizontally="true" />

    <EditText
        android:id="@+id/LoginUserID_Verification"

        android:cursorVisible="true"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buy_sell_background_grey"
        android:textSize="14dp"
        android:hint="Enter Email or Phone"
        android:padding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/card_blue"
        android:inputType="text"
        android:textCursorDrawable="@drawable/custom_cursor"/>
    <TextView

        android:id="@+id/loginUserID_warning"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/red"
        android:text="*UserID doesn't exist"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/loginUserID_signUp"

                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:textColor="@color/card_blue"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_semibold"
                android:scrollHorizontally="true" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/loginUserID_proceed"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textSize="14sp"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:background="@color/grey"
                android:textColor="@color/white"

                />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>