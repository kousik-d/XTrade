<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are just"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/darkBlack"/>


        <TextView

            android:id="@+id/dialog_steps"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="2"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/card_blue"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="steps away !"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/darkBlack"/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continue"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:elevation="4dp"
            android:layout_margin="4dp"
            android:textSize="16dp"
            android:background = "@drawable/buy_button_background"
            android:textColor="@color/white"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:id="@+id/dialog_close"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:elevation="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/stroked_button"
            android:textColor="@color/card_blue"
            />
    </LinearLayout>





</LinearLayout>