<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:backgroundTint="@color/card_blue"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/home_card_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                />
            <TextView
                android:id="@+id/home_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Alice"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make your Investment today"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/InvestTodayId"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_for_portfolio"
            android:text="Invest Today"
            android:textColor="@color/card_blue"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>









