<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:background="@color/transparent_color"
    android:id="@+id/idea_equity_smallCases_card"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/apxor_x_logo"/>

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/smallCases_stock_title"

                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Apxor"
                android:textColor="@color/darkBlack"
                android:textSize="14dp" />


            <TextView

                android:id="@+id/smallCases_company_title"

                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="by Apxor pvt. Ltd."
                android:textColor="@color/black"
                android:textSize="10dp" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High volatility"
                android:textAllCaps="true"
                android:textSize="8dp"
                android:textColor="@color/red"
                android:background="@color/transparent_red"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:fontFamily="@font/poppins_medium"/>

        </RelativeLayout>


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView

        android:id="@+id/smallCases_description"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:text="Systematice investing in trading and outperforming stocks from Total."/>



    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92.08%%"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/green"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Year Returns"
                android:textSize="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25000"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/darkBlack"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Amount"
                android:textSize="10dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>


        </LinearLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/smallCases_Invest"

                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/ipo_card_apply_btn"
                android:text="Invest"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10dp"/>

        </RelativeLayout>



    </LinearLayout>


</LinearLayout>


