<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/pastBids_card"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    app:cardCornerRadius="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView

            android:id="@+id/pastBids_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Apxor private Limited"
            android:textColor="@color/card_blue"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bid status"
                android:textSize="8dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>

            <TextView

                android:id="@+id/pastBids_status"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rejected"
                android:textColor="@color/darkBlack"
                android:textSize="10dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investor type"
                android:textSize="8dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>

            <TextView

                android:id="@+id/pastBids_type"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="IND"
                android:textColor="@color/darkBlack"
                android:textSize="10dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application No."
                android:textSize="8dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>

            <TextView

                android:id="@+id/pastBids_appNumber"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="800003633"
                android:textColor="@color/darkBlack"
                android:textSize="10dp"/>



        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_angle_down_icon"
        android:padding="8dp"
        android:background="@color/transparent_black"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>