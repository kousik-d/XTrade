        <Space
            android:layout_width="20dp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>
        <ImageView

            android:id="@+id/IPO_help"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/info"
