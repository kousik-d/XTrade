                android:text="Select investor type"
                android:layout_height="wrap_content"
                android:textColor="@color/darkBlack"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="2"/>
            <View
                android:layout_width="2dp"
                android:background="@color/black"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/InvestorTypeSpinner"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            >

            <LinearLayout
                android:id="@+id/QuantityLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Open Date"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="right"
                        android:text="13th Feb, 24"
                        android:textColor="@color/darkBlack"
                        android:textSize="12dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.39"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Min.Price"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="right"
                        android:text="â‚¹ 141.00"
                        android:textColor="@color/darkBlack"
                        android:textSize="12dp" />
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.39"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Lot size"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="right"
                        android:text="99"
                        android:textColor="@color/darkBlack"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="22dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Close Date"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="right"
                        android:text="25th Feb, 24"
                        android:textColor="@color/darkBlack"
                        android:textSize="12dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.27"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="left"
                        android:text="Max.Price"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:gravity="right"
                        android:text="â‚¹ 151.00"
                        android:textColor="@color/darkBlack"
                        android:textSize="12dp" />
                </LinearLayout>


            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:id="@+id/AddLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/darkBlack"
                android:padding="8dp"
                android:text="BID 1"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bidLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="left"
                                android:text="Quantity"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/bid1Quantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.39"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="left"
                                android:maxLength="7"
                                android:backgroundTint="@color/card_blue"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:text="99"
                                android:inputType="number"
                                android:drawableRight="@drawable/plus_sign"
                                android:textColor="@color/darkBlack"
                                android:textSize="14dp" />


                        </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.39"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="left"
                                android:text="(Lot size: 99)"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="22dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.95"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="left"
                                android:text="Price"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                            <EditText
                                android:id="@+id/bid1Price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.27"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="left"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:backgroundTint="@color/card_blue"
                                android:textCursorDrawable="@drawable/custom_cursor"
                                android:textColor="@color/darkBlack"
                                android:textSize="14dp" />

                        </LinearLayout>
                            <CheckBox
                                android:layout_width="match_parent"
                                android:text="Cut-off"
                                android:backgroundTint="@color/card_blue"
                                android:layout_height="24dp"/>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_margin="5dp"
         android:padding="5dp"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:text="Total BID Value"
             android:fontFamily="@font/poppins_medium"
             android:textColor="@color/darkBlack"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:text="$ 23,7819.00"
             android:gravity="right"
             android:fontFamily="@font/poppins_medium"
             android:textColor="@color/darkBlack"
             android:layout_height="wrap_content"/>
     </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AddMultiplebidsBtn"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:text="Add Multiple Bids"
        android:textSize="10dp"
        android:textAllCaps="false"
        android:textColor="@color/card_blue"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Block Funds Via"
                android:textColor="@color/darkBlack"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/upi_icon"
                android:layout_height="28dp"/>

        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Enter UPI ID"
                android:textSize="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="10dp"
                android:text="Click to check UPI App &amp; Sponsor Banks live  IPO."
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Apply"
        android:background="@color/card_blue"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
</LinearLayout>

</ScrollView>