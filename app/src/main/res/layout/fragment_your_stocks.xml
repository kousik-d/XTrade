<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourStocks">

    <TextView
        android:id="@+id/YourStocksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:padding="15dp"
        android:text="Your Stocks"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/YourStocksBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:clickable="true"
        android:layout_margin="20dp"
        android:src="@drawable/back_button" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/YourWishlistCardView"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ECECEC"
        android:layout_below="@id/YourStocksTextView">

        <TextView
            android:layout_width="wrap_content"
            android:padding="30dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content"
            android:text="Your WishList"/>

    </androidx.cardview.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/stock_item"
        android:layout_below="@id/YourWishlistCardView"
        android:layout_margin="5dp"/>


</RelativeLayout>