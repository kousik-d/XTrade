<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserOnBoarding_Documents.DocumentsFirst">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload your photo &amp; Signature"
        android:textColor="@color/card_blue"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_semibold"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="*You can only upload jpg or png files with a size upto 5MB"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:scrollHorizontally="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/transparent_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/documents1_photo"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icons_photo"
                android:text="Upload Photo"
                android:clickable="true"

                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:drawablePadding="16dp"
                android:layout_marginBottom="20dp"
                android:textSize="16dp"
                android:textColor="@color/darkBlack"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>





            </LinearLayout>

            <TextView

                android:id="@+id/documents1_sign"

                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icons_sign"
                android:text="Upload Signature"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:drawablePadding="18dp"
                android:textSize="16dp"
                android:textColor="@color/darkBlack"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textWarning"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Please upload your photo and signature."
        android:layout_marginLeft="18dp"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/documents1_continue"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            android:background="@color/grey"
            android:textColor="@color/white"
            />


    </RelativeLayout>



</LinearLayout>